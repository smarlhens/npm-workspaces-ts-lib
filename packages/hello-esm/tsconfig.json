{
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "ES2020",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true
  }
}
